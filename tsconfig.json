{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "types": ["node", "express", "cors", "bcrypt", "nodemailer", "node-cron"],
    "typeRoots": ["./node_modules/@types"],
    "removeComments": true,
  },
  "include": ["src/**/*", "globals.d.ts"],
  "exclude": ["node_modules"],
}